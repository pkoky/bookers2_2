<h1>name</h1>
<div class="col-md-8 offset-md-1">
  <h2>Bookes</h2>
  <table>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image-150.png", size: "40x40" %>
          <% end %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
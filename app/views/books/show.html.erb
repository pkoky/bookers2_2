<div class="container ">
  <div class="row">
    <%= render "books/list", book:@booknew, user:@user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
       <td>
         <%= link_to user_path(@book.user.id) do %>
         <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no-image-150.png", size: "40x40" %><br/>
         <%= @book.user.name %>
         <% end %>
       </td>
       <td>
         <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
         <% end %>
       </td>
       <td>
         <%= @book.body %>
       </td>
       <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm  btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" %>
        </td>
      <% end %>
      </tr>

      </table>

    </div>
  </div>
</div>
